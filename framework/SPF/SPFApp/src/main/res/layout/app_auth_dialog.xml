<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_permission_intro"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginBottom="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_margin"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_margin"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/app_icon_view"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="#ffff0000"
            android:contentDescription="@string/app_card_icon" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/app_name_view"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/app_identifier_view"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        style="@style/title"
        android:text="@string/app_permission_required_premission" />

    <ListView
        android:id="@+id/app_permission_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_marginBottom="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_margin"
        android:background="@android:color/darker_gray" />

    <TextView
        style="@style/title"
        android:text="@string/app_permission_selected_persona" />

    <Spinner
        android:id="@+id/app_persona"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>